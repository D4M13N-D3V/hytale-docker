# Hytale Server Configuration
# Copy this file to .env and customize as needed

# ============================================================
# Java / JVM Settings
# ============================================================

# Memory allocation for the JVM (default: 8G)
# Recommended: 4G minimum, 8G+ for larger servers
JAVA_MEMORY=8G

# ============================================================
# Server Settings
# ============================================================

# UDP port for the server (default: 5520)
# Hytale uses QUIC protocol over UDP
SERVER_PORT=5520

# Authentication mode: authenticated or offline (default: authenticated)
# Use 'offline' for LAN play or testing without authentication
AUTH_MODE=authenticated

# Patchline: release or pre-release (default: release)
# Use 'pre-release' to test upcoming features
PATCHLINE=release

# ============================================================
# Backup Settings
# ============================================================

# Enable automatic backups (default: false)
ENABLE_BACKUP=false

# Backup frequency in minutes (default: 30)
BACKUP_FREQUENCY=30

# ============================================================
# Authentication Tokens
# ============================================================
# These are required for authenticated mode
# Obtain tokens via /auth login device command in server console
# Or use the Server Provider Authentication API

# Session token for server authentication
HYTALE_SERVER_SESSION_TOKEN=

# Identity token for server authentication
HYTALE_SERVER_IDENTITY_TOKEN=
